<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mybatisplusdemo.mapper.MerchantpostMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.mybatisplusdemo.model.domain.Merchantpost">
        <id column="post_id" property="postId" />
        <result column="merchant_id" property="merchantId" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="is_deleted" property="isDeleted" />
    </resultMap>
    <update id="addLikeCount">
        UPDATE merchantpost
        SET like_count = like_count + 1
        WHERE post_id = #{merchantpost.postId}
    </update>
    <delete id="deleteContent">
        UPDATE merchantpost
        SET is_deleted = 'T'
        WHERE post_id = #{postId};
    </delete>
        <select id="getContents" resultMap="BaseResultMap">
        select * from merchantpost where merchant_id = #{merchantId} and is_deleted = 'F'
    </select>

</mapper>
